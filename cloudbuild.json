{
    "options": {
        "env": [
            "GIT_AUTHOR_NAME=BuildSystem",
            "GIT_AUTHOR_EMAIL=noreply@gurganus.name"
        ]
    },
    "steps": [
        {
            "name": "node",
            "entrypoint": "npm",
            "args": [
                "install"
            ]
        },
        {
            "name": "node",
            "entrypoint": "npm",
            "args": [
                "run",
                "build"
            ]
        },
        {
            "name": "gcr.io/$PROJECT_ID/firebase",
            "args": [
                "deploy"
            ]
        },
        {
            "name": "node",
            "entrypoint": "npm",
            "args": [
                "version",
                "minor"
            ]
        }
    ]
}